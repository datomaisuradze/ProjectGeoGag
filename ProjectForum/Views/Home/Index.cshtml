@model IEnumerable<BusinessLogicLayer.Model.Post>

@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="margin-top: 35px">

    <div class="container col-md-9">
        <table class="table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="data:image/jpg; base64, @(Convert.ToBase64String(item.PostContent))" />
                        <p>
                            <!--this will be used to display full info of current post-->
                            <a href="/HomeController/SeeFullPost/@item.PostID">
                                @item.PostComments.Count()
                                @if (@item.PostComments.Count() > 1)
                                {
                                    @:comments
                                }
                                else
                                {
                                    @:comment
                                }
                            </a>
                        </p>
                    </td>
                </tr>

                //Just to see if it works
                <tr>
                    <td>
                        <img src="data:image/jpg; base64, @(Convert.ToBase64String(item.PostContent))" />
                    </td>
                </tr>
            }
        </table>
    </div>

